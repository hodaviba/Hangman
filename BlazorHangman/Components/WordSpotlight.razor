<h3>@WordStatus</h3>

@code {
    public string WordStatus = string.Empty;

    public void CalculateWord(string answer, List<char> guessed)
    {
        var temp = answer.Select(x => guessed.IndexOf(x) >= 0 ? x : '_').ToArray();
        WordStatus = string.Join(" ", temp);
        this.StateHasChanged();
    }
}
